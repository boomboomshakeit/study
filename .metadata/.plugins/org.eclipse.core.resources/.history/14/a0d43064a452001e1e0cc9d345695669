package tut05;

public class LoopEx2 {

	public static void main(String[] args) {
		
		//0~10부터 출력하되 짝수만 출력하시오. for 증감연산자
		for(int i = 0; i < 10; i += 2) {
			System.out.print(i + " ");
		}
		
		System.out.println("");
		
		//0~10부터 출력하되 짝수만 출력하시오. for ,if, break
		//해당 조건을 건너 뛸 때 => break, continue;
		for(int i = 0; i < 10; i++) {
			if (i % 2 == 0) {
				break;
			}
			System.out.print(i + " ");
		}
		
		
		
	}

}
