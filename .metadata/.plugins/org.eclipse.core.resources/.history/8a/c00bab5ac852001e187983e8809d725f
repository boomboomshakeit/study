package tut05;

import java.util.Scanner;

public class LoopEx6 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		boolean star = true;
		
		while(star) {
			System.out.println("===================");
			System.out.println("스타벅스 커피 자동 판매");
			System.out.println("===================");
			
			System.out.println("1.구매(P/p) | 2.잔액(B/b) | 3.종료(Q/q)");
			System.out.println("메뉴 선택 > ");
			
			String choice = sc.next();
		
			int money = 10000;
			int price = 3000;
			int cnt = 10;
			
			int rest =  money - price;
			int rest2 = cnt - 1;
			
			switch(choice) {
			case "P":
			case "p":
				if(rest < 2000 && rest2 < 1) {
					
					System.out.println("구매 하실 수 없습니다.");
				}
				System.out.println("커피를 구매하셨습니다.");
				System.exit(0);
				break;
				
			case "B":
			case "b":
				
				int result = money - price;
				System.out.println(result +  "원 남았습니다.");
				System.exit(0);
				break;
				
			case "Q":
			case "q":
				System.out.println("프로그램을 종료합니다.");		//완료
				System.exit(0);
				break;
			
			default:
				break;
			}
			
			
			
			
		}
		
		
		
		
		
		
		
		
		
		
	}

}
